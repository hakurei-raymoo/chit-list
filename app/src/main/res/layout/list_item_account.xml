<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
                name="account"
                type="gensokyo.hakurei.chitlist.database.Account" />

        <variable
                name="clickListener"
                type="gensokyo.hakurei.chitlist.accountslist.AccountListener" />
    </data>

    <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="@{() -> clickListener.onClick(account)}"
            app:cardBackgroundColor="@color/colorSurface"
            app:cardElevation="2dp"
            app:cardPreventCornerOverlap="false"
            app:shapeAppearanceOverlay="@style/ShapeAppearance.Item.AdminCard">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <TextView
                    android:id="@+id/id_text"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@color/colorAccounts"
                    android:padding="@dimen/spacing_normal"
                    android:text="@{@string/number(account.accountId)}"
                    android:textColor="@{account.enabled ? @color/colorOnPrimary : @color/colorFaded}"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/first_name_text"
                    tools:text="@string/number" />

            <TextView
                    android:id="@+id/first_name_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/spacing_normal"
                    android:layout_weight="1"
                    android:text="@{@string/full_name(account.firstName, account.lastName)}"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/id_text"
                    app:layout_constraintEnd_toEndOf="parent"
                    tools:text="@string/full_name" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>
</layout>
